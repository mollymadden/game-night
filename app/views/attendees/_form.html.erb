
<%= form_with model: @attendee, local: true do |form| %>
 
  
 
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label "Dietary Restrictions" %><br>
    <%= form.select :diet, options_for_select( ['None', 'Vegetarian', 'Vegan', 'Gluten Free', 'Dairy Free', 'Religious Restrictions', 'Food Allergies', 'Other'] ) %>
  </p>

  <p>
    <%= form.label "Can you contribute any of the following?" %><br>
    <%= form.select :contribution, options_for_select( ['Just myself', 'Biscuits/lollies/dessert', 'Video Games / Console', 'Pirated copy of Rat Race','Board Game', 'Other']) %>
  </p>

  <p>
    <%= form.label "Any Additional Information" %><br>
    <%= form.text_field :message %>
  </p>
 
  <p>
    <%= form.submit 'Clickity Clack' %>
  </p>
 
<% end %>